@model finalProject.Models.User

@{
    ViewBag.Title = "index";
}
<div class="container">
    <div class="row">
        <div class="col">
            <ul class="nav nav-tabs flex-column" id="myTab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true" )">Submission of shifts</a><br />
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">shifts history</a><br />
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="messages-tab" data-toggle="tab" href="#messages" role="tab" aria-controls="messages" aria-selected="false">my profile</a>
                </li>
            </ul>
        </div>
        <div class="col">
            <div class="tab-content">
                <div class="tab-pane active" id="home" role="tabpanel" aria-labelledby="home-tab">@Html.Partial("_ShiftForm") </div>
                <div class="tab-pane" id="profile" role="tabpanel" aria-labelledby="profile-tab">@Html.Partial("_history")</div>
                <div class="tab-pane" id="messages" role="tabpanel" aria-labelledby="messages-tab">@Html.Partial("profile")</div>
            </div>
        </div>
        <script>
            $(function () {
                $('#myTab li:last-child a').tab('show')
            })
        </script>
    </div>
</div>